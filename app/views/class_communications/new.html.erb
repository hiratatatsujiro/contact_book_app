<%= form_with model: @class_communication, url: class_communications_path, class: 'registration-main', local: true do |f| %>

  <div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      学級通信
    </h1>
  </div>
 
  <%= render "shared/error_messages", resource: @class_communication %>
  
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">書いた日</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :class_communication_day,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 2021,
                    end_year: (Time.now.year + 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
  </div>

<div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">画像</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.file_field :images, name: "class_communication[images][]", class:"profile_image", id:"profile_image", multiple: true %>
  </div>
  <div id="image-list" class="image-preview"></div>  
   

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">タイトル</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :title, class:"input-default", id:"title", placeholder:"例) 文化祭を終えました！", maxlength:"40" %>
  </div>


  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">学級通信</label>
      <span class="indispensable">必須</span>
    </div>
      <%= f.text_area :text, class:"input-introduction", id:"introduction", placeholder:"例)文化祭を終えましたね。お疲れ様でした。・・・" %>
  </div>
  
<div class='register-btn'>
    <%= f.submit "登録" ,class:"register-pink-btn" %>
</div>
</div>
<% end %>


