<%= render "shared/home_header" %>

  <div class="contact-show">
    <div class="contact-table">

      <div class="detail-contact">
          <div class="name-detail">名前：<%= @contact.user.last_name%> <%= @contact.user.first_name%></div>
          <div class="first-detail-contact">連絡した日：<%= @contact.created_at.strftime('%Y/%m/%d %H:%M') %></div>
          <div class="second-detail-contact">今日の状態：<%= @contact.condition.name %></div>
          <div class="third-detail-contact">理由<br><%= @contact.reason %></div>
          <div class="fourth-detail-contact">プール・持久走への参加：<%= @contact.pool_marathon.name %></div>
          <div class="fifth-detail-contact">連絡事項<br><%= @contact.contact %></div>
      </div>

      <div class="contact-edit-delete">
          連絡を
          <% if @contact.user.id == current_user.id %>
          <%= link_to "編集する", edit_contact_path(@contact) %>・
          <% end %>
          <%= link_to "削除する", contact_path(@contact), method: :delete %>
      </div>
    </div>
      <div class="back-btn-new-show">
          <%=link_to 'もどる', contacts_path, class: "back-btn-show"%>
        </div>
  </div>

  <%= render "shared/home_footer" %>