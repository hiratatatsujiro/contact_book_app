  <%= form_with model: @timetable, url: timetable_path(@timetable), class: 'registration-main', local: true do |f| %>

    <div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      時間割作成
    </h1>
  </div>


   <%=render 'shared/error_messages', resource: @timetable %>
    <div class="container">
    <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">学校にくる日</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :next_day,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 2021,
                    end_year: (Time.now.year + 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
  </div>
    <div class="timetable-menu">
        <div class="weight-bold-timetable">
          １時間目
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:first_class_id, Category.all, :id, :name, {}, {class:"select-box-timetable", id:"item-category"}) %>
        <div class="weight-bold-timetable">
          ２時間目
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:second_class_id, Category.all, :id, :name, {}, {class:"select-box-timetable", id:"item-category"}) %>
        <div class="weight-bold-timetable">
          ３時間目
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:third_class_id, Category.all, :id, :name, {}, {class:"select-box-timetable", id:"item-category"}) %>
        <div class="weight-bold-timetable">
          ４時間目
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:fourth_class_id, Category.all, :id, :name, {}, {class:"select-box-timetable", id:"item-category"}) %>
        <div class="weight-bold-timetable">
          ５時間目
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:fifth_class_id, Category.all, :id, :name, {}, {class:"select-box-timetable", id:"item-category"}) %>
        <div class="weight-bold-timetable">
          ６時間目
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:sixth_class_id, Category.all, :id, :name, {}, {class:"select-box-timetable", id:"item-category"}) %>
</div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">下校時刻</label>
          <span class="indispensable">必須</span>
        </div>
          <%= f.text_field :leave_time, class:"select-box-leave-time", id:"introduction", placeholder:"例)16:10" %>
        </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">宿題</label>
          <span class="indispensable">必須</span>
        </div>
          <%= f.text_area :homework, class:"input-introduction", id:"introduction", placeholder:"例)計算ドリル３０、漢字１ページ" %>
        </div>

        <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">持ってくるもの</label>
          <span class="indispensable">必須</span>
        </div>
          <%= f.text_area :preparation, class:"input-introduction", id:"introduction", placeholder:"例)絵の具" %>
        </div>

        <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">お知らせ</label>
        </div>
          <%= f.text_area :notice, class:"input-introduction", id:"introduction", placeholder:"例)明日の２時間目に眼科検診があります" %>
        </div>

        <div class='register-btn-new'>
        <%= f.submit "登録" ,class:"register-pink-btn" %>
        </div>

        <div class="back-btn-new">
         <%=link_to 'もどる', timetables_path, class:"back-btn" %>
        </div>
        </div>

        <% end %>
